datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int     @id @default(autoincrement())
  uuid  String  @default(uuid()) @unique
  email String  @unique
  name  String?
}

model Issue {
  id          Int     @id @default(autoincrement())
  uuid        String  @default(uuid()) @unique
  author      User
  title       String
  description String
}

model Commment {
  id        Int @id @default(autoincrement())
  uuid      String @default(uuid()) @unique
  author    User
  contents  String
}

