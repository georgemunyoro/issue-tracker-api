// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    String    @id @default(uuid())
  email String    @unique
  name  String?
}

model Issue {
  id          String  @id @default(uuid())
  author      User
  title       String
  description String
}

model Commment {
  id        String  @id @default(uuid())
  author    User
  contents  String
}

